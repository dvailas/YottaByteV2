<!DOCTYPE html>
<html>
  <head>
    <title>YottaBytev2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <h1>YottaByte</h1>
      <div class="ui menu">
        <div class= "menu">
          <div class="item"><%= link_to 'Home',root_path%></div>
          <div class="item"><%= link_to 'About',root_path%></div>
          <div class="ui simple dropdown item">
            <div class="text">Hardware</div>
              <i class="dropdown icon"></i>
                <div class="menu">
                 <div class="header">Categories</div>
                 <%Category.order(:name).each do |category| %>
                  <div class="item"><%=link_to category.name, category%></div>
                 <%end%>
                </div>
          </div>
      <div class="ui simple dropdown item">
        <div class="text">Orders</div>
         <i class="dropdown icon"></i>
          <div class="menu">
            <div class="item"><%= link_to 'Orders',root_path%></div>
            <div class="item"><%= link_to 'Checkout',root_path%></div>
          </div>
        </div>
      </div>
        <div class="item" ><a href="/sale">On Sale</a></div>
        <div class="item" ><a href="/recent">Recently Updated</a> </div>
        <div class="item"><%= link_to 'Contact',root_path%></div>
      </div>
      </div>

      <form class="ui form" action="/result" method="get">
      <div class="field">
        <input type="text" id="keyword" name="keyword" placeholder="Search"/>
      </div>
      <div class ="ui form">
        <div class="field">
          <label>Categories</label>
          <select multiple="" class="ui dropdown">
            <%Category.order(:name).each do |category|%>
              <option value="<%=category.id%>"><%=category.name%></option>
            <%end%>
          </select>
        </div>
      </div>
      <input class="ui button"  name="commit" type="submit" value="Search" />
    </form>
    </header>

    <%render partial: 'shared/header'%>
    <%= yield %>
  </body>
</html>
