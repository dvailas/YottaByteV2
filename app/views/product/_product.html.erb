
  <div class="four wide column">
  <% if product.image.present?%>
    <% if show_link%>
      <%= image_tag product.image.url(:medium)%>
    <%else%>
      <%= image_tag product.image.url%>
    <%end%>
  <%end%>
     <p>
     <%if show_link %>
       <b>Name: </b><%= link_to product.name, product%>
      <%else%>
        <%= product.name%>
        <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <%= form_for(:session, url: add_item_product_path(product)) do |f| %>
              <input id="qty" type="number" name="qty" min="1" max="99" value="1" step="1">
              <%= f.submit "Add Item", class: "btn btn-primary" %>
          <% end %>
        </div>
        </div>
      <%end%><br/>
      <%if cart%>
        <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <%= form_for(:session, url: add_item_product_path(product)) do |f| %>
              <input id="qty" type="number" name="qty" min="1" max="99" value="1" step="1">
              <%= f.submit "Update Item", class: "btn btn-primary" %>
          <% end %>
        </div>
        </div>
        <%= link_to 'Remove From Cart', remove_item_product_path(product), method: :post%>
      <%end%>
       <b>Price: </b><%= product.price%>
       <b>Stock: </b><%= product.stock%>
       <br />
       <%if !show_link %>
        <b>SKU:</b><%= product.sku%> <br />
        <b>Description: </b><%= product.description%>
       <%end%>
     </p>
  </div>


