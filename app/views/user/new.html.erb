<h1>User#create</h1>
<p>Find me in app/views/user/create.html.erb</p>

<%= form_with scope: :user, url:user_index_path,local: true do |form| %>
  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>

  <p>
    <%= form.label :email %><br>
    <%= form.text_area :email %>
  </p>

  <p>
    <%= form.label :password %><br>
    <%= form.text_field :password %>
  </p>

  <p>
    <%= form.label :address %><br>
    <%= form.text_field :address %>
  </p>

  <p>
    <%= form.label :postalcode %><br>
    <%= form.text_field :postalcode %>
  </p>

  <p>
    <%= form.label :country %><br>
    <%= form.text_field :country %>
  </p>

  <p>
    <%= form.label :city %><br>
    <%= form.text_field :city %>
  </p>
  <%= form.collection_select :province, Province.all, :id, :name%>

  <p>
    <%= form.submit %>
  </p>
<% end %>

